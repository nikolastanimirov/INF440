<html>
    <head>
    <title>CRUD Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/login.css">
    </head>
    <body>
    <div class="container" >
        <h2><%= title %></h2>
        <hr>
        <form action="/save" method="post">
            <div class="from-group">

                <label for="formGroupExampleInput">Subject:</label>
                <input type="text" id="FirstName"  placeholder="Enter a Subject" name="Subject" required>
            </div>
            <div class="from-group">
                <label for="formGroupExampleInput">Description:</label>
                <input type="text" id="LastName"  placeholder="Enter a Description" name="Description">
            </div>
            <div class="from-group">
                <label>Severity (number 1-5):</label>
                <input type="number" id="Email"  name="Severity" onchange="myFunction()"  pattern="/\[1-5]/g" 
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" 
                  min="1" max="5" required>
                
            </div>          
            <button class="btn btn-warning" placeholder="Submit">Submit</button>
        </form>
    
    </div>
    <script>
function myFunction() {
  var x, text;
  x = document.getElementById("Email").value;
  if (isNaN(x) && x > 1 && x <5 ) {
    text = "Severity should be in range between 1 - 5";
    document.getElementById('button').disabled = true;
  }
  document.getElementById("check").innerHTML = text;
}
</script>
    </body>
</html>